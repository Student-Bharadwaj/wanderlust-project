<% layout("/layouts/boilerplate") %>
<body>
  <h2>All Listings:</h2>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let list of allLists){ %>
    <span>
      <a href="/listings/<%= list._id %>" class="anchor">
        <div class="card col mb-5" style="border: none;">
          <img
            src="<%= list.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h5 class="card-title"><%= list.title %></h5>
            <p class="card-text">&#8377;<%= list.price %> /night <br /></p>
            
          </div>
        </div>
      </a>
    </span>
    <% } %>
  </div>

  <ul>
    <% for(let list of allLists){ %>
    <li><a href="/listings/<%= list._id %>"><%= list.title %></a></li>
    <% } %>
  </ul>
</body>
